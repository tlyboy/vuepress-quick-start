::-webkit-scrollbar {
  width: 7px;
  height: 7px;
}

::-webkit-scrollbar-thumb {
  border-radius: 6px;
  background-color: #3eaf7c;
}

body {
  font-family: 'Noto Sans SC', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
}

code, kbd, .line-number {
  font-family: 'CaskaydiaCove NF', 'Noto Sans SC', source-code-pro, Menlo, Monaco, Consolas, 'Courier New', monospace;
}

.navbar .logo {
  border-radius: 50%;
  transition: all 0.3s;
}

.navbar > a:hover .logo {
  transform: rotate(180deg);
}

.home .hero img {
  border-radius: 50%;
  transition: all 1s;
}

.home .hero img:hover {
  border-radius: 50%;
  transform: rotate(180deg);
}

blockquote {
  border-left: 4px solid #42b983;
  padding: 10px 15px;
  color: #777;
  background-color: rgba(66, 185, 131, 0.1);
}

.theme-default-content:not(.custom) > h1 {
  text-align: center;
}

strong {
  color: #e74c3c;
}

p strong, li strong, td strong {
  font-weight: 400;
}

p, li {
  word-wrap: break-word;
}

h5, h6 {
  font-size: 1rem;
}

.theme-default-content div[class*='language-'] {
  margin: 0;
  border-radius: 6px;
}

.theme-default-content code {
  color: #2980b9;
  line-height: 1.7;
}

.theme-default-content pre code, .theme-default-content pre[class*='language-'] code {
  line-height: 1;
}

div[class~=language-]:before {
  content: 'text';
}

div[class~=language-bash]:before {
  content: 'bash';
}

div[class~=language-ini]:before {
  content: 'ini';
}

div[class~=language-conf]:before {
  content: 'conf';
}

div[class~=language-xml]:before {
  content: 'xml';
}

div[class~=language-properties]:before {
  content: 'prop';
}

div[class~=language-hosts]:before {
  content: 'hosts';
}

div[class~=language-http]:before {
  content: 'http';
}

div[class~=language-jsp]:before {
  content: 'jsp';
}

div[class~=language-jsx]:before {
  content: 'jsx';
}

div[class~=language-sql]:before {
  content: 'sql';
}
